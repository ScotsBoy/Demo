@model IEnumerable<RecordStore.Models.Release>

@{
    ViewData["Title"] = "View Releases";
}

<h1>View Releases</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Runtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Runtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medium.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReleaseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReleaseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReleaseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
